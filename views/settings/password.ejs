<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css"
  rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>


<div class="container-fluid">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><i data-feather="key" class="feather-icon"></i>&nbsp;&nbsp;<b>Report Password</b></h4>
        
        <form action="/report_password_save" method="post">
          <div class="row mt-4">
          <div class="col-md-4 cust-toggle1">
            <label for="report_pwd" class="text-dark"><b>Report Password</b></label><br>
            <input type="checkbox" value="Y" id="report_pwd" data-toggle="toggle" data-onstyle="success"
              data-offstyle="danger" data-on="Active" data-off="Deactive" name="report_pwd">
          </div>
          </div>
        <div class="row" id="details">
            <div class="row mt-3" style="margin-left: 2px;">

              <div class="form-group col-md-6">
                <label for="app_id"><b style="color: black;">App Id:</b></label>
                <input type="text" id="app_id" name="app_id" class="form-control" value="<%= data.msg[0].app_id %>" readonly />
              </div>

              <div class="form-group col-md-6">
                <label for="pwd"><b style="color: black;">Password:</b></label>
                <div class="input-group">
                  <input type="password" id="pwd" name="pwd" class="form-control" value=""
                    placeholder="Enter password here....." />
                  <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                      <i class="fa fa-eye-slash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group col-md-12 mt-2">
            <button type="submit" class="btn btn-success" style="border-radius: 5px;">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById("togglePassword").addEventListener("click", function () {
    const pwdField = document.getElementById("pwd");
    if (pwdField.type === "password") {
      pwdField.type = "text";
    } else {
      pwdField.type = "password";
    }
  });
</script>

<script>
  $('#details').hide();
  $('#report_pwd').on('change', function () {
    if ($(this).is(':checked')) {
      $('#details').show()
    } else {
      $('#details').hide()
    }
  })
</script>


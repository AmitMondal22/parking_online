<div class="container-fluid">
    <div class="row">
      <div class="card col-12">
        <div class="card-body">
          <div class="titleSec">
            <button type="button" class="btn btn-primary" id="myBtn"
              style="float: inline-end;border-radius: 6px;width: 6vw;">Add</button>
          </div>
          <div class="row mt-4">
            <h4 class="text-dark"><i data-feather="menu" class="feather-icon"></i>&nbsp;<b>Shift Setting</b></h4>
          </div>
          <div class="table-responsive mt-3">
            <table id="example" class="table table-striped table-bordered show_data" style="width:100%">
              <thead>
                <tr>
                  <th class="text-dark">Sl. No.</th>
                  <th class="text-dark">Shift Name</th>
                  <th class="text-dark">From Time</th>
                  <th class="text-dark">To Time</th>
                  <th class="text-dark">Action</th>
                </tr>
              </thead>
              <tbody>
                <% data.msg.forEach(function(item,index) { %>
                    <tr>
                      <td>
                        <%=(index+1)%>
                      </td>
                      <td>
                        <%=item.shift_name %>
                      </td>
                      <td>
                        <%=item.f_time %>
                      </td>
                      <td>
                        <%=item.t_time %>
                      </td>
                      <td>
                        <a href="/shift/edit_shift_details?customer_id=<%=item.customer_id%>&&shift_name=<%= item.shift_name %>" class="btn btn-info"
                          style="border-radius: 5px;"><i class="fa fa-edit"></i></a>
                      </td>
                    </tr>
                    <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="myModal">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <h3 class="modal-title text-dark"><i data-feather="plus-circle" class="feather-icon"></i>&nbsp;<b>Add Shift</b>
          </h3>
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
          <form action="/shift/add_save_shift" method="post" id="myForm">
            <div class="row">
              <div class="form-group col-md-3">
                <label for="cust_id" class="text-dark"><b>Customer Name:</b></label>
                <select name="cust_id" class="form-control" id="cust_id" required>
                  <option value="<%=user.user_data.customer_id==data.msg[0].customer_id
                    ? 'selected' : '' %>">
                    <%= data.msg[0].customer_name %>
                  </option>
                </select>
              </div>
  
              <div class="col-md-3">
                <div class="form-group">
                  <label for="shift_name" class="text-dark"><b>Shift Name</b></label>
                  <input type="text" class="form-control" id="shift_name" name="shift_name" placeholder="Enter Shift Name...."
                    value="">
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label for="frm_time" class="text-dark"><b>From Time</b></label>
                  <input type="time" name="frm_time" id="frm_time" class="form-control" value="">
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label for="to_time" class="text-dark"><b>To Time</b></label>
                  <input type="time" name="to_time" id="to_time" class="form-control" value="">
                </div>
              </div>
  
            </div>
            <div class="row mt-3">
              <div class="form-group col-md-3">
                <input type="submit" value="SUBMIT" class="btn btn-primary "
                  style="margin-left: 38vw;border-radius: 6px;" />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    $(document).ready(function () {
      $("#myBtn").click(function () {
        $("#myModal").modal();
        // $("#myBtn").hide()
      });
    });
  </script>